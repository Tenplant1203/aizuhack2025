generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite" // PostgreSQLとかでもOK
  url      = env("DATABASE_URL")
}

model Thread {
  id        Int       @id @default(autoincrement())
  title     String
  content   String
  createdAt DateTime  @default(now())
  comments  Comment[]
}

model Comment {
  id        Int       @id @default(autoincrement())
  content   String
  threadId  Int
  thread    Thread    @relation(fields: [threadId], references: [id])
  createdAt DateTime  @default(now())
}
